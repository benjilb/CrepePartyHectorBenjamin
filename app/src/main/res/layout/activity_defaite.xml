<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fond route immobile -->
    <com.example.crepeparty_hector_benjamin.StaticRoadView
        android:id="@+id/roadBgStatic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Message defaite -->
    <TextView
        android:id="@+id/textDefaite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vous avez perdu"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/pixel"
        android:padding="16dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/textBestEndlessDefaite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meilleur score en mode infini : 0 m"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/pixel"
        android:paddingTop="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textDefaite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Voiture accidentÃ©e au milieu vers le bas -->
    <ImageView
        android:id="@+id/imageloosecar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:src="@drawable/loosecar"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/buttonsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <!-- Ligne de boutons en bas -->
    <LinearLayout
        android:id="@+id/buttonsRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonRejouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejouer"/>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
